{% trans_default_domain 'toolbar' %}

<div class="text-center">
    <div class="btn-group btn-group-md" role="group">
{# Available products #}
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{ 'label.products'|trans }}
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {% for usedProduct in usedProducts %}
                <li><a href="{{ path(usedProduct ~ '_dashboard') }}" title="{{ ('label.' ~ usedProduct)|trans }}">{{ ('label.' ~ usedProduct)|trans }}</a></li>
            {% endfor %}
        </ul>
{# Tools specified by bundle #}
        {{ tools|raw }}
{# Help #}
        <a href="{{ path(product ~ '_help') }}" class="btn btn-info" title="{{ 'label.help'|trans }}" role="button">
            <span class="glyphicon glyphicon-flag"></span></a>
{# Main dashboard #}
        {% if dashboardRoute != null %}
            <a href="{{ path(dashboardRoute) }}" class="btn btn-info" title="{{ 'label.dashboard'|trans }}" role="button">
                <span class="glyphicon glyphicon-dashboard"></span></a>
        {% endif %}
{# Signout #}
        {% if signoutRoute != null %}
            <a href="{{ path(signoutRoute) }}" class="btn btn-info" title="{{ 'label.signout'|trans }}" role="button">
                <span class="glyphicon glyphicon-log-out"></span></a>
        {% endif %}
    </div>
</div>