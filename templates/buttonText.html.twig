{% trans_default_domain 'toolbar' %}

{# Link #}
{% if link == '' %}
    {% set href = '' %}
{% elseif link != 'cancel' %}
    {% set href = 'href=' ~ link %}
{% else %}
    {% set href = 'href="#" onclick="javascript:history.back(); return false;"' %}
{% endif %}

{# Title #}
{% if label != null %}
    {% set title = label %}
{% else %}
    {% set title = ('label.' ~ button)|trans %}
{% endif %}

{# Button #}
<a {{ href|raw }} class="btn btn-{{ size }} {{ style }} {{ color }}" style="margin: 0;" title="{{ title }}" role="button">
    {% if iconDisplay == 'false' %}
        {{ title }}
    {% else %}
        {% if location == 'top' %}
            <span class="{{ color }}">{{ title }}</span><br /><span class="{{ icon }} {{ color }}"></span>
        {% elseif location == 'left' %}
            <span class="{{ color }}">{{ title }}</span>&nbsp;<span class="{{ icon }} {{ color }}"></span>
        {% elseif location == 'bottom' %}
            <span class="{{ icon }} {{ color }}"></span><br /><span class="{{ color }}">{{ title }}</span>
        {% else %}
            <span class="{{ icon }} {{ color }}"></span>&nbsp;<span class="{{ color }}">{{ title }}</span>
        {% endif %}
    {% endif %}
</a>